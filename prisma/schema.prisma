generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  editor
  viewer
}

model Users {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  role      Role     @default(admin)
  createdAt DateTime @default(now())
}

model Projects {
  id          String   @id @default(cuid())
  title       String
  description String?
  price       Int
  createdAt   DateTime @default(now())
}
